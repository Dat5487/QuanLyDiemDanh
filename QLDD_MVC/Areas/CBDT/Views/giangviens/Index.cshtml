@model IEnumerable<QLDD_MVC.Models.giangvien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/CBDT/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-11">
                    <h4 class="m-0 font-weight-bold text-primary">Danh sách giảng viên</h4>
                </div>
                <div class="col-1">
                    @Html.ActionLink("Thêm giảng viên", "Create", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <th>
                        Mã giảng viên
                    </th>
                    <th>
                        Họ và tên
                    </th>
                    <th>
                        Giới tính
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Tên đăng nhập
                    </th>
                    <th>
                        Thao tác
                    </th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.magv)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.hoten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gioitinh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.diachi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sdt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.username)
                                </td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.magv }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.magv }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
