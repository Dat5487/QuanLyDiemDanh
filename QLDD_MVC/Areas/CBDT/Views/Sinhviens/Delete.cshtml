@model QLDD_MVC.Models.Sinhvien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/CBDT/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4 mx-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Xác nhận xóa sinh viên khỏi lớp hệ thống</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <dl class="dl-horizontal mx-2">
                <dt>
                    @Html.DisplayNameFor(model => model.hoten)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hoten)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.gioitinh)
                </dt>

                <dd>
                    @if (Model.gioitinh == true)
                    {
                        <text>Nam</text>
                    }
                    else
                    {
                        <text>Nữ</text>
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.malophc)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.malophc)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.khoa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.khoa)
                </dd>
            </dl>
            <div class="form-group mx-2">
                <div class="col-md-offset-2 ">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Xóa" class="btn btn-primary" />
                        <a class="btn btn-danger" href="##" onClick="history.go(-1); return false;">Hủy</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
