@model QLDD_MVC.Models.TaiKhoan

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Empty_Layout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />

<body class="bg-gradient-secondary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img src="~/Content/img/UHL2.png" width="400" height="400" style="vertical-align:middle;margin:0px 0px 0px 30px" />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h2 class="text-gray-900 mb-4;">Đăng nhập</h2>
                                    </div>
                                    <div class="login-panel panel panel-default">
                                        <div class="panel-body">
                                            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                            {
                                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                                <fieldset>
                                                    <div class="form-group">
                                                        @Html.TextBoxFor(model => model.username, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên đăng nhập" })
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                                    </div>
                                                    <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                                                </fieldset>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>